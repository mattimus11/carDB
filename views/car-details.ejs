<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car Details</title>
  <link rel="stylesheet" href="/styles.css"> <!-- Link to CSS file -->
</head>
<body>
  <div class="container">
    <h1>Car Details</h1>
    <p class="car-info"><strong>Car:</strong> <%= car.carID %> <%= car.carModel %></p>
    
    <h3>Add Part</h3>
    <form action="/add-part/<%= car._id %>" method="POST" class="add-part-form">
      <input type="text" name="partName" placeholder="Part Name" required />
      <input type="number" name="quantity" placeholder="Quantity" required />
      <button type="submit" class="add-button">Add Part</button>
    </form>

    <h2>Parts:</h2>
    <ul class="parts-list">
      <% parts.forEach(part => { %>
        <li class="part-item">
          <strong><%= part.partName %></strong>
          <span><%= part.quantity !== undefined && part.quantity !== null ? part.quantity : 'N/A' %></span> <!-- Display quantity or N/A -->
          <div class="part-info">
              <form action="/edit-part/<%= car._id %>/<%= part._id %>" method="POST" class="edit-form part-actions">
                  <input type="number" name="quantity" placeholder="Quantity" required value="<%= part.quantity !== undefined && part.quantity !== null ? part.quantity : '' %>" />
                  <button type="submit" class="edit-button">Edit</button>
              </form>
              <form action="/delete-part/<%= car._id %>/<%= part._id %>" method="POST" class="delete-form">
                  <button type="submit" class="delete-button">Delete</button>
              </form>
          </div>
        </li>
      <% }) %>
    </ul>

    <h3>Add Maintenance Record</h3>
    <form action="/add-maintenance/<%= car._id %>" method="POST" class="add-maintenance-form">
      <input type="date" name="date" required />
      <input type="text" name="description" placeholder="Maintenance Description" required />
      <button type="submit" class="add-button">Add Maintenance Record</button>
    </form>

    <h2>Maintenance Records:</h2>
    <ul class="maintenance-list">
      <% maintenanceRecords.forEach(record => { %>
        <li class="record-item">
          <strong>Date:</strong> <%= record.date %> - <strong>Description:</strong> <%= record.description %>
          <div class="record-actions" style="display: flex; align-items: center; gap: 10px;">
            <form action="/edit-maintenance/<%= car._id %>/<%= record._id %>" method="POST" class="edit-form" style="display: flex; align-items: center; gap: 5px;">
              <input type="date" name="date" required value="<%= record.date %>" />
              <input type="text" name="description" required value="<%= record.description %>" />
              <button type="submit" class="edit-button">Edit</button>
            </form>
            <form action="/delete-maintenance/<%= car._id %>/<%= record._id %>" method="POST" class="delete-form">
              <button type="submit" class="delete-button">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>

    <a href="/" class="back-link">Back to Car List</a>
  </div>
</body>
</html>
