<h1>Car Parts Database</h1>

<form action="/add-car" method="POST">
  <input
    type="text"
    name="carInfo"
    placeholder="Enter car make and model (e.g., Toyota Camry)"
    required
  />
  <button type="submit">Add Car</button>
</form>
<h2>Cars in list</h2>
<ul>
  <% cars.forEach(car => { %>
  <li>
    <a href="/car/<%= car._id %>"><%= car.carID %> <%= car.carModel %></a>
    <form action="/delete/<%= car._id %>" method="POST" style="display: inline">
      <button type="submit">Delete</button>
    </form>
  </li>
  <% }) %>
</ul>
